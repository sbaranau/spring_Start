<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
  logicalFilePath="table/0100_sms_status.xml">

    <changeSet id="0.0.1_0100" author="Aleksandr Golovnyov">
        <comment>Creates and fills table "sms_status"</comment>
        <createTable tableName="sms_status" schemaName="${db.schema}">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_sms_status" nullable="false"/>
            </column>
            <column name="name" type="varchar(32)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <sql>
            ALTER TABLE ${db.schema}.sms_status
                ADD CONSTRAINT ck_name CHECK (length(btrim(name::text)) > 0);
        </sql>
        <rollback>
            <dropTable tableName="sms_status" schemaName="${db.schema}"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
