<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
  logicalFilePath="table/0080_mail_status.xml">

    <changeSet id="0.0.1_0080" author="Vadim Marchuk">
        <comment>Create table "mail_status"</comment>
        <createTable tableName="mail_status" remarks="mail statuses" schemaName="${db.schema}">
            <column name="id" type="bigint" remarks="id" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="mail_status_pkey" nullable="false" />
            </column>
            <column name="name" type="varchar(30)" remarks="status name">
                <constraints nullable="false" />
            </column>
        </createTable>
        <sql>
            ALTER TABLE ${db.schema}.mail_status
                ADD CONSTRAINT name_ck CHECK (btrim(name::text) != ''::text);
        </sql>
        <rollback>
            <dropTable tableName="mail_status" schemaName="${db.schema}"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
